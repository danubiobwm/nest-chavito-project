  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "wait-for-db": "node ./scripts/wait-for-db.js",
    "migration:generate": "npm run build && npx typeorm migration:generate src/migrations/auto -d dist/data-source.js",
